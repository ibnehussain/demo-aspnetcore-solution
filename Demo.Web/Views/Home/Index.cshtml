@using Demo.Web.Models
@{
    ViewData["Title"] = "Home Page";
    var items = ViewBag.Items as List<Item> ?? new List<Item>();
    var itemCount = ViewBag.ItemCount ?? 0;
}

<div class="text-center">
    <h1 class="display-4">Welcome to Demo App</h1>
    <p class="lead">Explore our items catalog powered by Azure Cosmos DB</p>
</div>

@if(!string.IsNullOrEmpty(ViewBag.Error as string))
{
    <div class="alert alert-danger" role="alert">
        <i class="bi bi-exclamation-triangle-fill"></i>
        @ViewBag.Error
    </div>
}

<div class="mt-4">
    <div class="d-flex justify-content-between align-items-center mb-3">
        <h3>Items (@itemCount)</h3>
        @if(items.Any())
        {
            <a href="~/Items" class="btn btn-primary">View All Items</a>
        }
    </div>

    @if(items.Any())
    {
        <div class="table-responsive">
            <table class="table table-striped table-hover">
                <thead class="table-dark">
                    <tr>
                        <th>Name</th>
                        <th>Category</th>
                        <th>Created</th>
                        <th>Actions</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach(var item in items)
                    {
                        <tr>
                            <td>
                                <strong>@item.Name</strong>
                            </td>
                            <td>
                                <span class="badge bg-secondary">@item.DisplayCategory</span>
                            </td>
                            <td>
                                <small class="text-muted">@item.FormattedCreatedAt</small>
                            </td>
                            <td>
                                <a href="~/Items/Details/@item.Id?category=@Uri.EscapeDataString(item.Category)" 
                                   class="btn btn-sm btn-outline-primary">
                                    View Details
                                </a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    }
    else
    {
        <div class="text-center py-5">
            <div class="mb-4">
                <i class="bi bi-inbox display-1 text-muted"></i>
            </div>
            <h4 class="text-muted">No items available</h4>
            <p class="text-muted">Items will appear here once they are added to the system.</p>
            <div class="mt-3">
                <a href="~/Items" class="btn btn-outline-primary">
                    Go to Items Page
                </a>
            </div>
        </div>
    }
